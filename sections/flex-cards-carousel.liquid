{%- if section.blocks.size > 0 -%}
    
  <div id="section-{{ section.id }}" class="container--large remove-empty-space
    {% unless section.settings.remove_margin %} {% unless section.settings.descrease_margin %} container--vertical-space {% else %} container--vertical-space-grid {% endunless %} {% endunless %} 
    {% if section.settings.section_background_color != "rgba(0,0,0,0)" or section.settings.section_background_gradient != blank %} container--has-background {% endif %}
    {% if section.settings.section_visibility == "mobile" %} element--hide-on-desk {% endif %}
    {% if section.settings.section_visibility == "desktop" %} element--hide-on-small {% endif %}
  ">

    {%- render 'section-heading', heading: section.settings.heading, subheading: section.settings.subheading, heading_tag: section.settings.seo_h_tag, layout: section.settings.section_heading_layout -%}
    
    <div class="flex-cards-carousel" 
         data-section="flex-cards-carousel"
         data-autoplay="{{ section.settings.autoplay }}"
         data-autoplay-speed="{{ section.settings.autoplay_speed }}"
         data-cards-per-view="{{ section.settings.cards_per_view }}"
         data-cards-per-view-mobile="{{ section.settings.cards_per_view_mobile }}">
      <div class="carousel-container">
        <div class="carousel-track" data-carousel-track>
          {%- for block in section.blocks -%}
            <div class="card carousel-slide" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                <div class="card__image">
                  <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}">
                </div>
              {%- endif -%}
              {%- if block.settings.heading != blank or block.settings.text != blank -%}
                <div class="card__text">
                  {%- if block.settings.heading != blank -%}
                    <h3>{{ block.settings.heading }}</h3>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p>{{ block.settings.text }}</p>
                  {%- endif -%}
                  {%- if block.settings.button_label != blank -%}
                    <a href="{{ block.settings.link | default: '#' }}" class="button">{{ block.settings.button_label }}</a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
      
      {%- if section.blocks.size > 1 -%}
        <div class="carousel-controls">
          <button class="carousel-button carousel-button--prev" data-carousel-prev aria-label="Previous cards">
            <span class="visually-hidden">Previous</span>
            {%- render 'theme-symbols', icon: 'chevron' -%}
          </button>
          <button class="carousel-button carousel-button--next" data-carousel-next aria-label="Next cards">
            <span class="visually-hidden">Next</span>
            {%- render 'theme-symbols', icon: 'chevron' -%}
          </button>
        </div>
        
        {%- if section.settings.show_dots -%}
          <div class="carousel-dots" data-carousel-dots>
            {%- for block in section.blocks -%}
              <button class="carousel-dot {% if forloop.first %}carousel-dot--active{% endif %}" 
                      data-carousel-dot="{{ forloop.index0 }}" 
                      aria-label="Go to slide {{ forloop.index }}">
                <span class="visually-hidden">Slide {{ forloop.index }}</span>
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>

  </div>

{%- endif -%}

{%- if section.settings.section_background_color != "rgba(0,0,0,0)" -%}
  {% style %}
    #shopify-section-{{ section.id }} {
      background-color: {{ section.settings.section_background_color }};
    }
  {% endstyle %}
{%- endif -%}
{%- if section.settings.section_background_gradient != blank -%}
  {% style %}
    #shopify-section-{{ section.id }} {
      background: {{ section.settings.section_background_gradient }};
    }
  {% endstyle %}
{%- endif -%}
{%- if section.settings.section_heading_color != "rgba(0,0,0,0)" -%}
  {% style %}
    #shopify-section-{{ section.id }} {
      --color-text-main: {{ section.settings.section_heading_color }};
    }
  {% endstyle %}
{%- endif -%}

{% style %}
  #shopify-section-{{ section.id }} .flex-cards-carousel {
    --cards-per-view: {{ section.settings.cards_per_view }};
    --cards-gap: {{ section.settings.cards_gap }}px;
  }
  
  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .flex-cards-carousel {
      --cards-per-view: {{ section.settings.cards_per_view_mobile }};
    }
  }
{% endstyle %}

<link rel="stylesheet" href="{{ 'section-flex-cards-carousel.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'component-flex-cards-carousel.js' | asset_url }}" defer></script>

