{% doc %}
  @prompt
    A scrollable carousel of flex cards that let me set background color, add a heading and image

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-card-carousel-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .ai-card-carousel__container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 20px 0;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
  }

  .ai-card-carousel__container-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-card-carousel__container-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-card-carousel__container-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-card-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }

  .ai-card-carousel__card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-card-carousel__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-card-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-card-carousel__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-card-carousel__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-card-carousel__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-card-carousel__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .ai-card-carousel__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-card-carousel__card-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.card_width | times: 0.8 }}px;
    }

    .ai-card-carousel__container-{{ ai_gen_id }} {
      gap: {{ block.settings.card_gap | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-card-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-card-carousel__container-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% liquid
        assign card_enabled_key = 'card_' | append: i | append: '_enabled'
        assign card_image_key = 'card_' | append: i | append: '_image'
        assign card_heading_key = 'card_' | append: i | append: '_heading'
        assign card_content_key = 'card_' | append: i | append: '_content'
        assign card_link_key = 'card_' | append: i | append: '_link'

        assign card_enabled = block.settings[card_enabled_key]
        assign card_image = block.settings[card_image_key]
        assign card_heading = block.settings[card_heading_key]
        assign card_content = block.settings[card_content_key]
        assign card_link = block.settings[card_link_key]
      %}

      {% if card_enabled %}
        {% if card_link != blank %}
          <a href="{{ card_link }}" class="ai-card-carousel__card-{{ ai_gen_id }}">{% else %}
          <div class="ai-card-carousel__card-{{ ai_gen_id }}">
        {% endif %}<div class="ai-card-carousel__image-wrapper-{{ ai_gen_id }}">
          {% if card_image %}
            <img
              src="{{ card_image | image_url: width: 400 }}"
              alt="{{ card_image.alt | escape }}"
              class="ai-card-carousel__image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ card_image.width }}"
              height="{{ card_image.height }}"
            >
          {% else %}
            <div class="ai-card-carousel__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-card-carousel__empty-state-{{ ai_gen_id }}">
                Add image
              </div>
            </div>
          {% endif %}
        </div>

        {% if card_heading != blank %}
          <h3 class="ai-card-carousel__heading-{{ ai_gen_id }}">{{ card_heading }}</h3>
        {% endif %}

        {% if card_content != blank %}
          <div class="ai-card-carousel__content-{{ ai_gen_id }}">{{ card_content }}</div>
        {% endif %}

        {% if card_link != blank %}
          </a>
        {% else %}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

